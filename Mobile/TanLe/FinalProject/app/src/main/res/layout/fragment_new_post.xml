<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_post_form"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/btnCancelNewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        style="@style/MyNegativeButton"
        android:text="@string/button_cancel_text" />

    <Button
        android:id="@+id/btnPostNewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCancelNewPost"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        style="@style/MyPositiveButton"
        android:text="@string/button_post_text" />

    <TextView
        android:id="@+id/tvNewPostCharsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPostNewPost"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btnPostNewPost"
        android:text="140" />

    <RelativeLayout
        android:id="@+id/rlNewPostCreatorDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCancelNewPost"
        android:background="@drawable/new_post_creator_background" >

        <ImageView
            android:id="@+id/ivNewPostUserProfilePic"
            android:layout_width="55dp"
        	android:layout_height="55dp"
            android:padding="10dp"
            android:src="@drawable/ic_default_avatar" />

        <TextView
            android:id="@+id/tvNewPostUserScreenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ivNewPostUserProfilePic" />
    </RelativeLayout>

    <EditText
        android:id="@+id/etNewPostText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="top|left"
        android:layout_below="@id/rlNewPostCreatorDetails"
        android:background="@drawable/new_post_body_background"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:maxLength="140" >

        <requestFocus />
    </EditText>

</RelativeLayout>