<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/travelling_1</item>
        <item name="colorPrimaryDark">@color/travelling_1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Compose Fragment Dialog -->
    <style name="MyNegativeButton" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:textColor">@color/negative_btn_text_color</item>
    </style>

    <style name="MyPositiveButton" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/btn_positive</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:textColor">@color/custom_actionbar_text_color</item>
    </style>
    <!-- End Dialog -->
</resources>
