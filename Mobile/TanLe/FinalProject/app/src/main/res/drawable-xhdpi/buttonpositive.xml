<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <corners android:radius="5dp" />

    <gradient
        android:angle="90"
        android:centerColor="@color/custom_actionbar_color"
        android:centerX="31%"
        android:endColor="@color/custom_actionbar_color"
        android:startColor="@color/custom_actionbar_light_color"
        android:type="linear" />

    <padding
        android:bottom="3dp"
        android:left="10dp"
        android:right="10dp"
        android:top="3dp" />

    <stroke
        android:width="1dp"
        android:color="@color/custom_border_color" />

</shape>