<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.website.hibernate.xml.model.HomeWork" table="home_work" catalog="website">
        <id name="id" type="long">
            <column name="HOMEWORK_ID" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="HOMEWORK_NAME" length="50" not-null="true"/>
        </property>
        <property name="description" type="string">
            <column name="HOMEWORK_DES" length="100"/>
        </property>
        <many-to-one name="course" class="com.website.hibernate.xml.model.Course" fetch="select">
            <column name="COURSE_ID" not-null="true" />
        </many-to-one>
    </class>
</hibernate-mapping>