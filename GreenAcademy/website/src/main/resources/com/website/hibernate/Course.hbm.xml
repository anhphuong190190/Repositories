<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.website.hibernate.xml.model.Course" table="course" catalog="website">
        <id name="id" type="long">
            <column name="COURSE_ID" />
            <generator class="identity" />
        </id>
        <property name="courseName" type="string">
            <column name="COURSE_NAME" length="20" not-null="true"/>
        </property>
        <set name="homeworks" table="home_work" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="COURSE_ID" not-null="true" />
            </key>
            <one-to-many class="com.website.hibernate.xml.model.HomeWork" />
        </set>
    </class>
</hibernate-mapping>